{
    "$schema": "http://json.schemastore.org/prettierrc",

    "useTabs": false,
    "tabWidth": 4,
    "singleQuote": true,
    "trailingComma": "all",
    "plugins": ["prettier-plugin-tailwindcss", "prettier-plugin-svelte"],
    "overrides": [
        {
            "files": "*.svelte",
            "options": {
                "parser": "svelte"
            }
        },
        {
            "files": ["*.html", "*.json"],
            "options": {
                "tabWidth": 2
            }
        }
    ],
    "tailwindStylesheet": "./src/routes/layout.css"
}
